<h1>Car with id <%= @car.id %></h1>

<p>
  <b>Name</b><br>
  <%= @car.name %>
</p>

<p>
  <b>Color</b><br>
  <%= @car.color %>
</p>

<div class="form-actions">
  <%= link_to 'Back', cars_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_car_path(@car), :class => 'btn' %>
  <%= link_to 'Delete', car_path(@car), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
</div>