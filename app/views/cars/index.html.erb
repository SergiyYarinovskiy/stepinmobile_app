<h1>Cars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
  </tr>

  <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.color %></td>
        <td><%= link_to 'Show', car_path(car) %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>