<h1>Ship with id <%= @ship.id %></h1>

<p>
  <b>Name</b><br>
  <%= @ship.name %>
</p>

<p>
  <b>Color</b><br>
  <%= @ship.color %>
</p>

<div class="form-actions">
  <%= link_to 'Back', ships_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_ship_path(@ship), :class => 'btn' %>
  <%= link_to 'Delete', ship_path(@ship), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
</div>